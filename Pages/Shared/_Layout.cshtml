@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wypożyczalnia Aut</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-pro sticky-top">
        <div class="container">
            
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <i class="fa-solid fa-car"></i> 
                <span>CAR RENTAL</span>
            </a>

            <div class="collapse navbar-collapse flex-grow-1 justify-content-end" id="navbarContent">
                
                <ul class="navbar-nav d-flex flex-row align-items-center gap-2">                  
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Start</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cars">Samochody</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Privacy">Kontakt</a>
                    </li>

                   @if (SignInManager.IsSignedIn(User))
{
    // --- WARIANT A: Użytkownik ZALOGOWANY ---
    
    // 1. Przycisk Rezerwuj (kieruje do rezerwacji/aut)
    <li class="nav-item ms-2">
        <a class="nav-link btn-cta" asp-page="/Cars">Rezerwuj</a>
    </li>

    // 2. Przywitanie (opcjonalnie)
    <li class="nav-item d-flex align-items-center ms-3">
        <span class="text-white small">Cześć, @User.Identity?.Name!</span>
    </li>

    // 3. Przycisk Wyloguj (niezbędny, żeby wyjść)
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-white" style="text-decoration: none;">Wyloguj</button>
        </form>
    </li>
}
else
{
    // --- WARIANT B: Użytkownik NIEZALOGOWANY ---
    
    // 1. Przycisk Rezerwuj (kieruje do LOGOWANIA)
    <li class="nav-item ms-2">
        <a class="nav-link btn-cta" asp-page="/Login">Rezerwuj</a>
    </li>
    
    // 2. Link do logowania w menu (dla wygody)
    <li class="nav-item">
        <a class="nav-link" asp-page="/Login">Logowanie</a>
    </li>
}

                </ul>
            </div>
        </div>
    </nav>
</header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarRental - <a asp-area="" asp-page="/Privacy">Polityka Prywatności</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>