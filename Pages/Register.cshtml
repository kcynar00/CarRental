@page
@model CarRental.Pages.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="auth-wrapper">

    <div class="card auth-card shadow-lg">
        <div class="card-body p-5">

            <div class="text-center mb-4">
                <h2 class="fw-bold auth-title">Załóż konto</h2>
                <p class="text-muted small">Dołącz do nas i wypożyczaj auta w kilka minut</p>
            </div>

            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger py-2 small text-center"></div>

                <div class="mb-3">
                    <label class="form-label auth-label">Imię i nazwisko</label>
                    <input asp-for="Input.FullName"
                           class="form-control auth-input"
                           placeholder="Jan Kowalski" />
                    <span asp-validation-for="Input.FullName"
                          class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label auth-label">Email</label>
                    <input asp-for="Input.Email"
                           class="form-control auth-input"
                           placeholder="jan@przyklad.pl" />
                    <span asp-validation-for="Input.Email"
                          class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label auth-label">Hasło</label>
                    <input asp-for="Input.Password"
                           type="password"
                           class="form-control auth-input"
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.Password"
                          class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label auth-label">Powtórz hasło</label>
                    <input asp-for="Input.ConfirmPassword"
                           type="password"
                           class="form-control auth-input"
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword"
                          class="text-danger small"></span>
                </div>

                <div class="d-grid mb-4">
                    <button type="submit" class="btn btn-primary btn-lg auth-btn">
                        Utwórz konto
                    </button>
                </div>
            </form>

            <div class="text-center pt-3 border-top">
                <span class="text-muted small">Masz już konto?</span>
                <a asp-page="/Login"
                   class="fw-semibold text-primary text-decoration-none ms-1">
                    Zaloguj się
                </a>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
